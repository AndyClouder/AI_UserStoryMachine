/* pages/question/question.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.search-section {
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.question-list {
  flex: 1;
  padding: 20rpx;
}

.question-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.question-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.question-options {
  margin-bottom: 30rpx;
}

.option-item {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
}

.option-radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.option-radio.selected {
  background: #3cc51f;
  border-color: #3cc51f;
  color: #fff;
}

.answer-section {
  background: #f0f9ff;
  border-left: 6rpx solid #3cc51f;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.correct-answer {
  font-size: 28rpx;
  color: #3cc51f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.explanation {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  border: none;
}

.btn-primary {
  background: #3cc51f;
  color: #fff;
}

.btn-secondary {
  background: #f8f8f8;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-secondary.favorited {
  background: #ff6b6b;
  color: #fff;
  border-color: #ff6b6b;
}

.no-result {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}